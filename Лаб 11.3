using System;
using System.Globalization;
using System.Linq;

class Program
{
    static void Main()
    {
        Console.Write("Введiть 3 дати (через кому, формат: ДД.ММ.РРРР): ");
        string input = Console.ReadLine();

        string[] parts = input.Split(',');
        DateTime[] dates = new DateTime[3];

        for (int i = 0; i < 3; i++)
        {
            dates[i] = DateTime.ParseExact(parts[i].Trim(), "dd.MM.yyyy", CultureInfo.InvariantCulture);
        }

        int minYear = dates.Min(d => d.Year);
        Console.WriteLine($"a) Найменший рiк: {minYear}");

        Console.WriteLine("b) Веснянi дати:");
        foreach (var d in dates)
        {
            if (d.Month >= 3 && d.Month <= 5)
                Console.WriteLine($"   {d.ToString("dd.MM.yyyy")}");
        }

        DateTime latest = dates.Max();
        Console.WriteLine($"c) Найпiзнiша дата: {latest.ToString("dd.MM.yyyy")}");
    }
}
