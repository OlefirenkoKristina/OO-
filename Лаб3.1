using System;

class Employee
{
    private readonly string name;
    private readonly int age;
    private readonly decimal salary;

    public decimal AnnualIncome => salary * 12;

    public Employee(string name, int age, decimal salary)
    {
        this.name = name;
        this.age = age;
        this.salary = salary;
    }

    public void Display()
    {
        Console.WriteLine("Iм'я: " + name);
        Console.WriteLine("Вiк: " + age);
        Console.WriteLine("Зарплата: " + salary.ToString("C"));
        Console.WriteLine("Рiчний дохiд: " + AnnualIncome.ToString("C"));
    }
}

class Program
{
    static void Main()
    {
        Employee emp = new Employee("Петро", 30, 25000);
        emp.Display();
    }
}
