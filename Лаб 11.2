using System;

class Program
{
    static void Main()
    {
        Console.Write("Введiть дату (у форматi РРРР-ММ-ДД): ");
        string input = Console.ReadLine();

        if (DateTime.TryParse(input, out DateTime targetDate))
        {
            DateTime today = DateTime.Today;

            if (targetDate > today)
            {
                TimeSpan difference = targetDate - today;
                Console.WriteLine($"До вказаної дати залишилось {difference.Days} днiв.");
            }
            else if (targetDate < today)
            {
                TimeSpan difference = today - targetDate;
                Console.WriteLine($"Вказана дата вже минула {difference.Days} днiв тому.");
            }
            else
            {
                Console.WriteLine("Це сьогоднiшня дата.");
            }
        }
        else
        {
            Console.WriteLine("Некоректний формат дати.");
        }
    }
}
