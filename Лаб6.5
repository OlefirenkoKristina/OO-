using System;
using System.Collections;

public class Program
{
    public static void Main()
    {
        ArrayList strings = new ArrayList();

        strings.Add("Київ");
        strings.Add("Львiв");
        strings.Add("Харкiв");
        strings.Add("Днiпро");
        strings.Add("Одеса");

        Console.WriteLine("Вмiст колекцiї:");
        foreach (string s in strings)
            Console.WriteLine(s);

        Console.WriteLine("\nРядки, що мiстять \"в\":");
        foreach (string s in strings)
        {
            if (s.Contains("в"))
                Console.WriteLine(s);
